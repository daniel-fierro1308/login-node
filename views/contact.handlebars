<link rel="stylesheet" href="/css/contact-style.css">
<link rel="stylesheet" href="/css/animate.css">
<section class="banner">
	<img src="/img/contact.jpg" alt="contact image">
	<h2 id="contact-us" class="animated fadeInLeft">Contact Us</h2> 
	<h2 id="mail" class="animated fadeInLeft">jose.fierro@globant.com</h2>	
</section>

<section class="formu animated fadeIn">
	<form>
		<h2>Contact Form</h2>

		<div class="form-group">
			<label>Name</label>
			<input class="form-control" type="text" name="name-person" placeholder="your Name here">
		</div>

		<div class="form-group">
			<label>Surname</label>
			<input class="form-control" type="text" name="surname" placeholder="your surname here">
		</div>

		<div class="form-group">
			<label>Email</label>
			<input class="form-control" type="Email" name="email" placeholder="your email here">
		</div>

		<div class="form-group">
			<label> Message Subject</label>
			<input class="form-control" type="text" name="message subject" placeholder="message subject">
		</div>

		<div class="form-group">
			<label>Message</label>
			<textarea class="form-control" name="message" placeholder="your contact message here"> </textarea>
		</div>

		<input type="button" value="send" id="button-send" class="btn btn-primary">
	</form>
</section>